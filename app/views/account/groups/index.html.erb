<div class="col-md-12">
  <h2 class="text-center">我加入的讨论版</h2>
  <li><%=link_to("New Group", new_group_path, class: "btn btn-primary pull-right")%></li>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>title</th>
        <th>description</th>
        <th>creator</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
       <tr>
         <td> # </td>
         <td><%=link_to(group.title , group_path(group) )%></td>
         <td><%= render_group_description(group) %></td>
         <td><%= group.posts.count %></td>
         <td><%= group.updated_at %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
</div>
